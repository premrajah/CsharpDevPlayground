<Window x:Class="INotifyPropertyChanged101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChanged101"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Firstname</Label>
            <TextBox VerticalContentAlignment="Center" Text="{Binding Path=Firstname, Mode=TwoWay}" Name="FName" Width="300"></TextBox>
        </StackPanel>
        <Line Height="10"></Line>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Lastname</Label>
            <TextBox VerticalContentAlignment="Center" Text="{Binding Path=Lastname, Mode=TwoWay}" Name="LName" Width="300"></TextBox>
        </StackPanel>
        <Line Height="10"></Line>
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Fullname</Label>
            <TextBox VerticalContentAlignment="Center" Text="{Binding Path=Fullname, Mode=TwoWay}" Name="FULName" Width="300"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
